<h1>Sign up!</h1>

<div class="signup-form">
<%= form_for :user, url: '/users' do |f| %>

  <h4>Name: <%= f.text_field :username %></h4>
  <h4>Email: <%= f.text_field :email %></h4>
  <h4>Password: <%= f.password_field :password %></h4>
  <h4>Password confirmation: <%= f.password_field :password_confirmation %></h4>
  <span id="signup-btn"><%= f.submit "Submit" %></span>

<% end %>
</div>